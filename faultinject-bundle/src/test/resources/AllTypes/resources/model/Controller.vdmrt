class Controller


instance variables

  outputs : Outputs;
  no_obstacles : int := 0;
values


operations

public Controller : Outputs  ==> Controller
Controller(outs)==
(
  outputs := outs;
 );

private loop : () ==>()
loop()==
	cycles(2)
   (
   		no_obstacles := no_obstacles + 1;
   )
   		

thread
periodic(10E6,0,0,0)(loop);	 
		 
end Controller
